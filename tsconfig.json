{
  "compilerOptions": {
    "outDir": "./bundle/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*",
    "./build/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}